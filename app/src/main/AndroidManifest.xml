<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.coreservlets.widgets"
    android:versionCode="1"
    android:versionName="1.0">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name">
        <activity
            android:name=".ListViewActivityBis"
            android:exported="false" />
        <activity
            android:name=".WidgetsInitialActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ButtonActivity"
            android:exported="true"
            android:label="@string/button_app_name"
            android:screenOrientation="fullSensor"
            tools:ignore="WrongManifestParent">
        </activity>
        <activity
            android:name=".SpinnerActivity"
            android:label="@string/spinner_app_name"
            android:screenOrientation="fullSensor"
            tools:ignore="WrongManifestParent">
        </activity>
        <activity
            android:name=".ListViewActivity"
            android:exported="true"
            android:label="@string/list_view_app_name"
            android:screenOrientation="fullSensor"
            tools:ignore="WrongManifestParent">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GridViewActivity"
            android:label="@string/grid_view_app_name"
            android:screenOrientation="fullSensor"
            tools:ignore="WrongManifestParent">
        </activity>
    </application>

</manifest>